# Kest API Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# Server Configuration
# ===========================================
PORT=8080
GIN_MODE=debug

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kest
DB_USER=kest_user
DB_PASSWORD=your-secure-password-here

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=generate-a-random-jwt-secret-here
JWT_EXPIRATION=24h

# ===========================================
# CORS Configuration
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,https://kest.example.com
