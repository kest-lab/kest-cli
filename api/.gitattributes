# Auto detect text files and perform LF normalization
* text=auto

# Go source files
*.go text eol=lf

# Shell scripts
*.sh text eol=lf
Makefile text eol=lf

# Windows scripts
*.bat text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
.env* text eol=lf
.editorconfig text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# SQL files
*.sql text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
